page {
  height: 100%;
  background: #eff5f5;
}

.register_header_container {
  position: relative;
  width: 100%;
  height: 30%;
}

.register_header_container image {
  width: 100%;
  height: 100%;
}

.register_header_back {
  position: absolute;
  top: 14%;
  left: 2%;
  right: 88%;
  bottom: 68%;
}

.register_header {
  width: 100%;
}

.register_header_info_container {
  position: absolute;
  left: 30%;
  right: 30%;
  top: 0%;
  bottom: 0%;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.register_header_title {
  margin-top: 18%;
  color: white;
}

.register_header_img {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin: 10%;
}

.register_item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 5%;
  background: #fefefe;
  align-items: center;
  border: 0.5px, solid, #dadcdb;
  margin-top: 3%;
}

.register_item_text {
  margin-left: 15px;
  font-size: 14px;
}

.register_item_inout {
  margin-left: 15px;
  font-size: 14px;
}

.register_notice_container{
  margin-top: 6%;
  display: flex;
  width: 100%;
  height: 5%; 
  flex-direction: row;
  padding: 15px;
  margin-left: 15px;
  align-items: center;
}


.register_submit{
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 90%;
  justify-content: flex-end;
}

.register_submit_button{
  background: #4282EC;
  width: 100%;
  color: white;
  margin-bottom: 10%;
  
}

